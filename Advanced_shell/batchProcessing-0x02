#!/bin/bash

# Define the list of Pokémon
POKEMON=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Define the API base URL and output directory
API_URL="https://pokeapi.co/api/v2/pokemon/"
OUTPUT_DIR="pokemon_data"

# Loop through each Pokémon in the array
for pokemon in "${POKEMON[@]}"; do
    echo "Fetching data for $pokemon..."

    full_url="${API_URL}${pokemon}"
    output_file="${OUTPUT_DIR}/${pokemon}.json"

    retries=0
    max_retries=3
    success=false

    while [ $retries -lt $max_retries ] && [ "$success" = false ]; do
        curl -sf -o "$output_file" "$full_url"

        # Check for both a successful exit code and a non-empty file
        if [ $? -eq 0 ] && [ -s "$output_file" ]; then
            success=true
        else
            retries=$((retries + 1))
            echo "Request failed ($retries/$max_retries), retrying in 2 seconds..."
            sleep 2
        fi
    done

    if [ "$success" = true ]; then
        echo "Saved data to $output_file ✅"
    else
        echo "Failed to fetch data for $pokemon after $max_retries attempts ❌"
    fi

    sleep 1
done